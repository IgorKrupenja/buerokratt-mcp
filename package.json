{
  "name": "buerokratt-mcp",
  "version": "0.1.0",
  "description": "MCP server for BÃ¼rokratt AI coding assistant rules",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "pnpm run start:dev",
    "start:dev": "node --watch --loader ts-node/esm src/server.ts",
    "inspect": "pnpm dlx @modelcontextprotocol/inspector --config inspector.json",
    "validate": "pnpm run validate",
    "check-context-size": "pnpm run check-context-size",
    "measure-load-time": "pnpm run measure-load-time",
    "lint:markdown": "markdownlint-cli2 \"rules/**/*.md\" \"README.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix \"rules/**/*.md\" \"README.md\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "typecheck": "pnpm dlx tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.49.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "zod": "^4.1.13"
  }
}
