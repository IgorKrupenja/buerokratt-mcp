{
  "name": "buerokratt-mcp",
  "version": "0.1.0",
  "description": "MCP server for BÃ¼rokratt AI coding assistant rules",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "^24.12.0",
    "pnpm": "^10.26.2"
  },
  "scripts": {
    "start": "tsx --watch src/server.ts",
    "inspect": "pnpm exec mcp-inspector --config inspector.json",
    "validate": "tsx scripts/validate.ts",
    "check-context-size": "tsx scripts/check-context-size.ts",
    "measure-load-time": "tsx scripts/measure-load-time.ts",
    "lint:markdown": "markdownlint-cli2 \"rules/**/*.md\" \"README.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix \"rules/**/*.md\" \"README.md\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests skipped for PoC\"",
    "test:coverage": "echo \"Tests skipped for PoC\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/express": "^5.0.6",
    "@types/node": "^24.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "tsx": "^4.21.0",
    "zod": "^4.2.1"
  }
}
